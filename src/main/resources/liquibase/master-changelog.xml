<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="jmchugh" id="1">
        <createTable tableName="twitter">
            <column name="id" type="nvarchar(255)">
                <constraints primaryKey="true" primaryKeyName="PK__twitter"/>
            </column>
            <column name="version" type="bigint"/>
            <column name="created_by" type="nvarchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="nvarchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="twitter_id" type="nvarchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="username" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="screen_name" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="nvarchar(255)"/>
            <column name="url" type="nvarchar(max)"/>
            <column name="followers" type="bigint"/>
        </createTable>
        <createTable tableName="tweet">
            <column name="id" type="nvarchar(255)">
                <constraints primaryKey="true" primaryKeyName="PK__tweet"/>
            </column>
            <column name="version" type="bigint"/>
            <column name="created_by" type="nvarchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="nvarchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="twitter_id" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="tweet_id" type="bigint">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="message" type="nvarchar(500)">
                <constraints nullable="false"/>
            </column>
            <column name="tweet_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="tweet" baseColumnNames="id" constraintName="fk__tweet_twitter_id_twitter_id" referencedTableName="twitter" referencedColumnNames="id"/>
        <createTable tableName="hashtag">
            <column name="id" type="nvarchar(255)">
                <constraints primaryKey="true" primaryKeyName="PK__hashtag"/>
            </column>
            <column name="version" type="bigint"/>
            <column name="created_by" type="nvarchar(255)"/>
            <column name="created_date" type="timestamp"/>
            <column name="last_modified_by" type="nvarchar(255)"/>
            <column name="last_modified_date" type="timestamp"/>
            <column name="tweet_id" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="hashtag" type="nvarchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="hashtag" baseColumnNames="id" constraintName="fk__hashtag_tweet_id_tweet_id" referencedTableName="tweet" referencedColumnNames="id" />
    </changeSet>

</databaseChangeLog>